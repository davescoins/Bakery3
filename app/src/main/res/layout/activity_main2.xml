<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bakerygrey">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="257dp"
        android:layout_height="668dp"
        app:srcCompat="@drawable/nintentypercent"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="-208dp" />

    <LinearLayout
        android:layout_width="229dp"
        android:layout_height="105dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="242dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="229dp"
            android:layout_height="105dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="6dp"
            android:text="@string/welcome_to_discount_bakery"
            android:textColor="#432F21"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />
    </LinearLayout>

    <Button
        android:layout_width="411dp"
        android:layout_height="62dp"
        android:text="@string/button_string"
        android:textSize="26dp"
        app:backgroundTint="#CA171B"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="563dp" />
</androidx.constraintlayout.widget.ConstraintLayout>