<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newgreyback">

    <TextView
        android:id="@+id/bakeGoods_HeadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your Goods"
        android:textColor="#000000"
        android:textSize="35sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="27dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="143dp"
        android:layout_height="468dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="166dp"
        tools:ignore="MissingConstraints">

        <androidx.appcompat.widget.AppCompatButton

            android:id="@+id/idbagel"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_margin="30dp"
            android:background="@drawable/newbagel"
            android:contentDescription="@string/bagel"
            android:src="@drawable/newbagel"
            app:backgroundTint="#ABA59C9C"
            app:backgroundTintMode="multiply" />

        <!--        //This is the bread button-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bread"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_margin="30dp"
            android:background="@drawable/newbread"
            android:contentDescription="@string/bread"
            android:src="@drawable/newbread"
            app:backgroundTint="#ABA59C9C"
            app:backgroundTintMode="multiply" />

        <!--        //This is the cookie button-->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cookie"
            android:layout_width="95dp"
            android:layout_height="95dp"

            android:layout_margin="30dp"
            android:background="@drawable/newcookies"
            android:contentDescription="@string/cookies"
            android:src="@drawable/newcookies"
            app:backgroundTint="#ABA59C9C"
            app:backgroundTintMode="multiply" />

        <!--    //This is the second row of buttons-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="134dp"
        android:layout_height="467dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="196dp"
        tools:layout_editor_absoluteY="167dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/iddoughnut"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_margin="30dp"
            android:background="@drawable/newdoughnut"
            android:contentDescription="@string/dougnuts"
            app:backgroundTint="#ABA59C9C"
            app:backgroundTintMode="multiply" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/muffin"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_margin="30dp"
            android:background="@drawable/newmuffin"
            android:backgroundTint="#ABA59C9C"
            android:contentDescription="@string/muffins"
            app:backgroundTintMode="multiply" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/pastries"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_margin="30dp"
            android:background="@drawable/newpastries"
            android:contentDescription="@string/pastries"
            app:backgroundTint="#ABA59C9C"
            app:backgroundTintMode="multiply" />

        <LinearLayout
            android:layout_width="77dp"
            android:layout_height="507dp"
            android:orientation="vertical"></LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bakeGoods_DoughnutView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Doughnut"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="230dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/bakeGoods_MuffinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muffin"
        android:textColor="#000000"
        android:textSize="23dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="393dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/bakeGoods_PastriesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pastries"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="330dp"
        tools:layout_editor_absoluteY="545dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="417dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="193dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/bakeGoods_BagelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:text="Bagel"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bakeGoods_BreadView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="75dp"
            android:text="Bread"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bakeGoods_CookieView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="40dp"
            android:text="Cookie"
            android:textColor="#000000"
            android:textSize="23dp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>